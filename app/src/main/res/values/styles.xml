<resources>

    <style name="Widget.MyApplication.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.MyApplication.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme colors here -->
        <item name="colorPrimary">@color/material_dynamic_primary95</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary10</item>
        <item name="colorOnPrimary">@color/material_dynamic_secondary99</item>
        <item name="colorSecondary">@color/material_dynamic_primary40</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/cardview_dark_background</item>
    </style>
</resources>