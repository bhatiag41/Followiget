<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Having themes.xml for v31 variant because @android:dimen/system_app_widget_background_radius
     and @android:dimen/system_app_widget_internal_padding requires API level 31
    -->
    <style name="Theme.MyApplication.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
        <item name="colorPrimary">@color/material_dynamic_primary95</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary10</item>
        <item name="colorOnPrimary">@color/material_dynamic_secondary20</item>
        <item name="colorSecondary">@color/material_dynamic_primary40</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/cardview_dark_background</item>
    </style>
</resources>